                                <int name="max">1</int>
                            </map>
                        </map>
                        <string name="handler">world.objects.tools.Tinderbox.ignite</string>
                        <string name="constraint">get_entity(actor.attached_hand_primary) = tool &amp;&amp; contains_recursive(tool.contains, child.type=types.fire)</string>
