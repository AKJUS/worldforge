<atlas>
    <map>
        <map name="attributes">
            <map name="geometry">
                <map name="default">
                    <string name="path">dural/items/tools/torch/model/torch.mesh</string>
                    <string name="type">cylinder-z</string>
                </map>
            </map>
            <map name="present">
                <string name="default">dural/items/tools/torch/torch.modeldef</string>
            </map>
