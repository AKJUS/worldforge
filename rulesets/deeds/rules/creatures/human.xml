<atlas>
    <map>
        <map name="attributes">
            <map name="bbox">
                <list name="default">
                    <float>-0.4</float>
                    <float>0</float>
                    <float>-0.4</float>
                    <float>0.4</float>
                    <float>1.8</float>
                    <float>0.4</float>
                </list>
            </map>
            <map name="geometry">
                <map name="default">
                    <string name="path">dural/creatures/biped/male/model/male.mesh</string>
                    <string name="type">capsule-y</string>
                </map>
            </map>
            <map name="present">
                <string name="default">dural/creatures/biped/human.entitymap</string>
            </map>
            <map name="attachments">
                <map name="default">
                    <string name="hand_primary">contains_recursive(actor.contains, child = tool)</string>
                    <string name="hand_secondary">contains_recursive(actor.contains, child = tool)</string>
                    <string name="torso">contains_recursive(actor.contains, child = tool) &amp;&amp; tool.worn = 'torso'</string>
                    <string name="legs">contains_recursive(actor.contains, child = tool) &amp;&amp; tool.worn = 'legs'</string>
                    <string name="feet">contains_recursive(actor.contains, child = tool) &amp;&amp; tool.worn = 'feet'</string>
                    <string name="head">contains_recursive(actor.contains, child = tool) &amp;&amp; tool.worn = 'head'</string>
                </map>
            </map>
            <map name="decays">
                <string name="default">dead_human_skull</string>
            </map>
            <!-- TODO: replace or otherwise handle -->
            <map name="guise">
                <map name="default">
                    <map name="material">
                        <string name="head">simon</string>
                    </map>
                </map>
            </map>
            <map name="sex">
                <string name="default">male</string>
            </map>
            <map name="statistics">
                <map name="default">
                    <float name="strength">23</float>
                </map>
            </map>
            <!-- Don't move too slow or it makes traversal boring -->
            <map name="speed_ground">
                <float name="default">8</float>
            </map>
            <map name="damage_punch">
                <float name="default">5</float>
            </map>
            <map name="_usages">
                <map name="default">
                    <map name="punch">
                        <list name="targets">
                            <string>entity instance_of types.game_entity</string>
                        </list>
                        <string name="handler">world.objects.creatures.Hitting.punch</string>
                        <string name="constraint">get_entity(actor.attached_hand_primary) = none</string>
                        <string name="description">Punch something with a your fist.</string>
                    </map>
                </map>
            </map>
        </map>
        <string name="id">human</string>
        <string name="objtype">class</string>
        <string name="parent">mobile</string>
    </map>
</atlas>
