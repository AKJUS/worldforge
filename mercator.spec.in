%define name @PACKAGE@
%define version @VERSION@
%define release 1
%define libsuffix @MERCATOR_LIB_SUFFIX@

Summary: A WorldForge terrain library.
Name: %{name}
Version: %{version}
Release: %{release}
Copyright: GPL
Group: System Environment/Libraries
Source: %{name}-%{version}.tar.gz
Requires: Atlas-C++ >= 0.4.4 wfmath >= 0.2.10 libstdc++
BuildRoot: %{_tmppath}/%{name}-%{version}-buildroot
BuildRequires: wfmath-devel >= 0.2.10 libstdc++-devel >= 2.95.2

%description
Mercator is designed to handle terrain data.

%package devel
Summary: A WorldForge terrain library headers and static libs.
Group: Development/Libraries
Requires: %{name} = %{version}

%description devel
Mercator is designed to handle terrain data.

%prep
%setup -q

%build
%configure --enable-static
make

%install
rm -rf $RPM_BUILD_ROOT
%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{_libdir}/lib*.so.*
%doc AUTHORS COPYING NEWS README ChangeLog

%files devel
%defattr(-,root,root)
%{_libdir}/lib*.so
%{_libdir}/lib*.la
%{_libdir}/lib*.a
%{_libdir}/pkgconfig/*
%{_includedir}/%{name}%{libsuffix}
