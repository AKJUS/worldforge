//Contains samplers which needs to be defined before they are used.
//That's why it's named "_samplers.material", to make it be picked up early by Ogre.

sampler /common/base/sampler/high
{
    filtering anisotropic
    max_anisotropy 16
}

sampler /common/base/sampler/medium
{
    filtering trilinear
}

sampler /common/base/sampler/low
{
    filtering bilinear
}