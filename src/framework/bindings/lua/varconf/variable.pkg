$#include <varconf/variable.h>

namespace varconf {

typedef enum { GLOBAL           = 0x1 << 0,
               USER             = 0x1 << 1,
               INSTANCE         = 0x1 << 2
} Scope;

class VarBase
{
public:
  Scope scope() const;
  void setScope(Scope s);
};

class Variable  {
public:

  Variable(bool b);
  Variable(int i);
  Variable(double d);
  Variable(const std::string& s);

  ~Variable();

  operator bool();
  operator int();
  operator double();
  std::string as_string() const;

  bool is_bool() const;
  bool is_int()  const;
  bool is_double() const;
  bool is_string() const;
  bool is_array() const;
  
  VarBase& elem() const;
};

} // namespace varconf


